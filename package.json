{
    "name": "react-native-code-styles",
    "displayName": "react-native-code-styles",
    "description": "Visual Studio Code plugin to convert CSS to React Native compatible styles",
    "version": "0.0.1",
    "publisher": "ueno",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.ueno.pasteReactNativeStyles"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.ueno.pasteReactNativeStyles",
                "title": "Paste CSS to React Native styles"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/copy-paste": "1.1.30",
        "@types/mocha": "^2.2.42",
        "@types/node": "7.0.52",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "copy-paste": "1.3.0",
        "css-to-react-native": "2.0.4"
    }
}
